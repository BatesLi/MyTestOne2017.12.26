<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/txt_ganhu_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="18sp" android:textColor="@color/black_90"/>

    <ImageView android:id="@+id/image_ganhu_cover"
        android:layout_width="150dp" android:layout_height="120dp"
        android:layout_below="@id/txt_ganhu_title" android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView android:id="@+id/txt_ganhuu_user_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/image_ganhu_cover" android:layout_marginLeft="10dp"
        android:textColor="@color/black_90"/>

    <TextView android:id="@+id/txt_ganhu_show_time"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_below="@id/image_ganhu_cover" android:layout_marginRight="20dp"
      android:layout_alignParentRight="true" android:textColor="@color/black_90"/>

    <View
        android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@color/black_90" android:layout_marginTop="10dp"
        android:layout_below="@id/txt_ganhu_show_time"/>
</RelativeLayout>