<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView android:id="@+id/img_news"
            android:layout_width="90dp" android:layout_height="90dp"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/txt_news_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_news" android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" android:text="标题"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

